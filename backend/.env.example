# PathoAssist Backend Configuration

# Application
APP_NAME="PathoAssist Backend"
DEBUG=False

# Server
HOST=127.0.0.1
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# WSI Processing
PATCH_SIZE=224
MAGNIFICATION=20.0
BACKGROUND_THRESHOLD=0.8
MIN_TISSUE_RATIO=0.1
MAX_PATCHES_PER_SLIDE=1000

# ROI Selection
ROI_TOP_K=50
ROI_VARIANCE_WEIGHT=0.6
ROI_DENSITY_WEIGHT=0.4

# AI Inference
MODEL_NAME=google/medgemma-2b
USE_QUANTIZATION=True
MAX_TOKENS=1024
TEMPERATURE=0.7
TOP_P=0.9
DEVICE=cpu  # or cuda, mps

# Safety & Compliance
CONFIDENCE_THRESHOLD=0.6
ENABLE_DISCLAIMERS=True
LOG_ALL_INFERENCES=True

# Report Generation
REPORT_TEMPLATE=clinical
INCLUDE_CONFIDENCE_SCORES=True
MAX_REPORT_LENGTH=2000

# Export
PDF_MARGIN=50
PDF_FONT_SIZE=11
